<div ng-app="app">
  {{ 1 + 1 }}

  <div ng-controller= "tasksCtrl">

  <h4>To Do</h4>
    <ol>
      <li ng-repeat="task in tasks track by $index" ng-click="completeTask($index)">
        {{ task }}
        <input ng-model="task" required>
      </li>
    </ol>
    
  <input ng-model="newTask">
  <button ng-click="addTask(newTask)">Add Task</button>


    
  </div>
</div>

